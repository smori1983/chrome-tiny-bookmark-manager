{
    "extends": "eslint:recommended",
    "env": {
        "browser": true
    },
    "globals": {
        "chrome": true,
        "localStorage": true,
        "$": true,
        "QUnit": true,
        "smodules": true,
        "tbm": true
    },
    "rules": {
        "array-bracket-spacing": ["error", "never"],
        "brace-style": ["error", "1tbs"],
        "comma-dangle": ["error", {
            "arrays": "always-multiline",
            "objects": "always-multiline",
            "functions": "never"
        }],
        "no-console": ["error", {
            "allow": ["warn", "error"]
        }],
        "no-undef-init": "error",
        "no-undefined": "error",
        "no-unused-vars": ["error", {
            "vars": "all",
            "args": "none",
            "caughtErrors": "none"
        }],
        "eqeqeq": "error",
        "quotes": ["error", "single"]
    }
}
